generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  avatar        String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  deletionRequests DeletionRequest[]
  subscription     Subscription?
  platforms        UserPlatform[]
}

model Platform {
  id           String   @id @default(cuid())
  name         String   @unique
  slug         String   @unique
  category     String
  description  String
  difficulty   String   // easy, medium, hard
  estimatedTime String
  guideUrl     String?  // Link to slettmeg.no guide
  deletionUrl  String?  // Direct link to deletion page
  gdprEmail    String?  // Email for GDPR requests
  instructions Json?    // Step-by-step instructions
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  deletionRequests DeletionRequest[]
  userPlatforms    UserPlatform[]
}

model UserPlatform {
  id         String   @id @default(cuid())
  userId     String
  platformId String
  status     PlatformStatus @default(NOT_STARTED)
  username   String?  // User's username on this platform (optional)
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@unique([userId, platformId])
}

model DeletionRequest {
  id          String        @id @default(cuid())
  userId      String
  platformId  String
  type        RequestType
  status      RequestStatus @default(PENDING)
  message     String?       // Custom message or generated GDPR request
  response    String?       // Response from platform
  submittedAt DateTime?
  completedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                     String             @id @default(cuid())
  userId                 String             @unique
  stripeCustomerId       String?            @unique
  stripeSubscriptionId   String?            @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  status                 SubscriptionStatus @default(INACTIVE)
  plan                   Plan               @default(FREE)
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String   // user or assistant
  content   String
  createdAt DateTime @default(now())

  @@index([userId])
}

// Enums
enum PlatformStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  ACTION_REQUIRED
}

enum RequestType {
  ACCOUNT_DELETION
  DATA_EXPORT
  GDPR_REQUEST
  PARTIAL_DELETION
}

enum RequestStatus {
  PENDING
  SUBMITTED
  IN_PROGRESS
  COMPLETED
  REJECTED
  ACTION_REQUIRED
}

enum SubscriptionStatus {
  INACTIVE
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
}

enum Plan {
  FREE
  PRO
  BUSINESS
}
